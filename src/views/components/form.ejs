                <div class="form-group">
                    <input type="text" id="" name="distancia" placeholder="Distancia(km)" class="form-control" autofocus>
                </div>

                <div class="form-group">
                    <input type="text" id="" name="tiempo" placeholder="Tiempo(min)" class="form-control" autofocus>
