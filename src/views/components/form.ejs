<div class="contenedor__form">
    <div class="card" style="width: 24rem;">
        <div class="card-header">
            <p class="titulo">Fitness</p>
        </div>

        <div class="card-body">

            <form action="/add" method="POST">

                <div class="form-group">
                    <input type="date" name="fecha" class="form-control">
