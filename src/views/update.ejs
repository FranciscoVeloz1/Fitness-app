<%-include ('components/header.ejs') %>

<div class="contenedor__form">
    <div class="card" style="width: 24rem;">
        <div class="card-header">
            <p class="titulo">Actualizar</p>
        </div>

        <div class="card-body">

            <form action="/update/<%= data.id %>" method="POST">

                <div class="form-group">
                    <input type="date" name="fecha" value="<%= data.fecha %>" class="form-control">
                </div>

                <div class="form-group">
                    <input type="text" id="" name="distancia" value="<%= data.distancia %>" placeholder="Distancia(km)" class="form-control" autofocus>
                </div>

                <div class="form-group">
                    <input type="text" id="" name="tiempo" value="<%= data.tiempo %>" placeholder="Tiempo(min)" class="form-control" autofocus>
                </div>

                <div class="form-group">
                    <input type="text" id="" name="calorias" value="<%= data.calorias %>" placeholder="Calorias" class="form-control" autofocus>
                </div>

                <div class="form-group">
                    <input type="text" id="" name="peso" value="<%= data.peso %>" placeholder="Peso" class="form-control" autofocus>
                </div>

                <div class="contenedor__form">
                    <button type="submit" id="" class="btn btn-primary">Actualizar</button>
                </div>
            </form>

        </div>
    </div>
</div>